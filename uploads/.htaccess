# Security for uploads folder
# Only allow image files to be accessed

<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny access to other file types
<FilesMatch "\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Disable directory listing
Options -Indexes

# Set max file size for uploads (5MB)
php_value upload_max_filesize 5M
php_value post_max_size 5M
